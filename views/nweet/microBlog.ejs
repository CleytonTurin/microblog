<!DOCTYPE html>
<html>
  <head>
    <title><Nwitter></title>

  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	
	<link rel="stylesheet" href="/stylesheets/styles.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>   
    
  </head>
  <body>

<% include ../navbar.ejs %>

  <% include ../erros.ejs %>
<div class='row'>
  
      <div class='col s12 m12 l3'>
    
            <% if(typeof(usuario) != "undefined"){ %>
            
                  <form action="/nweet/submit" method="POST">
                  
                        <label>Insira aqui seu Nweet (140 caracteres)!</label>
                        <textarea name='nweet[texto]' id='nweet_texto'></textarea>
                        <button class="btn waves-effect waves-light orange" type="submit" name="action">Nweet!</button>
                        
                  </form>

              <% }else{ %>
              <br><br>
              <a class="waves-effect waves-light orange btn" href='/usuario/cadastro'>Criar nova conta</a>
              
              <% }%>
              
              
              
      </div>   

<div class='col s12 m12 l9'>        
                  <% if(typeof(nweets) != "undefined"){ %>

                  
                  
                                  <% for(var index in nweets){ %>
                                        <%
                                              if(nweets[index].autor != null ){
                                              var dataFormatada = new Date(nweets[index].data);
                                        %>
                                        
                                              <div class="row">
                                                <div class="col s12 m12 l12">
                                                  <div class="card blue-grey darken-1">
                                                    <div class="card-content white-text">
                                                                        
                                              <% if(typeof(usuario) != "undefined" ){ %>
                                                    <% if(usuario.nickname==nweets[index].autor.nickname ){ %>
                                                          <a href="/nweet/remove/<%= nweets[index]._id %> "><i class="material-icons right">close</i></a>
                                                    <% } %>     
                                                <% } %>
                                                  
                                                    
                                                      <span class="card-title">
                                                          <p>@<%= nweets[index].autor.nickname %> </p> 
                                                        
                                                          
                                                      </span>
                                                      <p><%= nweets[index].texto %></p>
                                                    
                                                    
                                                                      <p class='publish_date'><%=
                                                                          dataFormatada.getHours() + ":" +
                                                                          dataFormatada.getMinutes() + " " +
                                                                          dataFormatada.getDate() + "/"  +
                                                                          (dataFormatada.getMonth() + 1 )
                                                                    %></p>
                                                    </div>
                                                  </div>
                                                </div>
                                              
                                        </div>     
                                        <% } %>
                            <%    
                                  }
                            %>
                            
                    <% } %>
          </div>       
</div>



  <script src="/javascripts/scripts.min.js"></script>
  <script>
      $(document).ready(function(){
      $(".button-collapse").sideNav();
      });
  </script>
  </body>
  
  
</html>
